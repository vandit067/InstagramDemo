<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_grey" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dimen_size_40"
        android:gravity="center"
        android:text="@string/loginwithinstagram"
        android:textColor="@color/black" />

    <Button
        android:id="@+id/activity_instagram_login_btn_connect"
        android:layout_width="@dimen/dimen_size_150"
        android:layout_height="@dimen/dimen_size_40"
        android:layout_centerInParent="true"
        android:background="@color/color_blue"
        android:text="@string/connect"
        android:textColor="@android:color/white"
        android:textSize="@dimen/dimen_size_font_16" />

</RelativeLayout>